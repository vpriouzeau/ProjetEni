{% extends 'FOSUserBundle::layout.html.twig' %}


{% block fos_user_content %}
    
    {% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
    
    <form class="contenu" id="connection-form" action="{{ path("fos_user_security_check") }}" method="post">
        <div class="contenu-header">
            <h1 class="contenu-title">Connection</h1>
        </div>
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <label for="username">{{ 'Login'|trans }}</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />


        <label for="password">{{ 'Mot de passe'|trans }}</label>
        <input type="password" id="password" name="_password" required="required" />

        <div id="remember">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label id="label-remember_me" for="remember_me">{{ 'Se souvenir de moi'|trans }}</label>
        </div>
        <input type="submit" id="submit" name="_submit" value="{{ 'Valider'|trans }}" />
    </form>
    
    
{% endblock fos_user_content %}
